# ===========================================
# Hanacaraka API - Docker Environment
# ===========================================
# Copy this file to .env when running with Docker

APP_NAME="Aksara Jawa API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Jakarta

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# ===========================================
# LOGGING
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# DATABASE - Docker MySQL
# ===========================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=be_hanacaraka
DB_USERNAME=hanacaraka
DB_PASSWORD=secret

# ===========================================
# CACHE & SESSION - Docker Redis
# ===========================================
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# SESSION SECURITY
# ===========================================
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ===========================================
# FILESYSTEM
# ===========================================
FILESYSTEM_DISK=local
BROADCAST_CONNECTION=log

# ===========================================
# MAIL (Log driver for development)
# ===========================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# ML SERVICE
# ===========================================
ML_SERVICE_URL=http://host.docker.internal:5000
ML_SERVICE_TIMEOUT=30

# ===========================================
# SANCTUM
# ===========================================
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:8000,127.0.0.1:3000,127.0.0.1:8000
SANCTUM_TOKEN_EXPIRATION=10080

# ===========================================
# BCRYPT
# ===========================================
BCRYPT_ROUNDS=12

VITE_APP_NAME="${APP_NAME}"
